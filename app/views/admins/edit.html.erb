<div class="form-wrapper">
    <h3>Edit User</h3>
    <%= form_with url: admin_path, model: @user do |form| %>
        <div>
            <%= form.label :email %>
            <%= form.text_field :email %>
        </div>
        <div>
            <%= form.label :first_name %>
            <%= form.text_field :first_name %>
        </div>
        <div>
            <%= form.label :last_name %>
            <%= form.text_field :last_name %>
        </div>
        <div>
            <%= form.submit %>
        </div>
    <% end %>
</div>