<h1> User List </h1>

<table>
    <thead>
        <th>First Name</th>
        <th>Email </th>
        <th colspan="3">Action/Status</th>
    </thead>
    <tbody>
        <% @users.each do |user| %>
            <tr>
                <td><%= user.first_name %></td>
                <td><%= user.email %></td>
                <td><%= link_to "Edit", edit_admin_path(:id => user.id) %></td>
                <td>
                    <% if user.is_verified %>
                        Verified
                    <% else %>
                        <%= link_to "Verify" %>
                    <% end %>
                </td>
            </tr>
        <% end %>
    </tbody>
</table>